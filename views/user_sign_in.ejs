    <body>
        <nav class="navigation-bar">
            <!-- this div contains the logo and title os the page -->
            <div class="title-combo">
                <div class="website-logo">
                    <img src="images/logo.png">
                </div>
                <div class="website-name">
                    <h1>
                        <a href='/'>
                        Pockket
                    </a>
                    </h1>
                    <h4>
                        <a href='/' style="color:magenta;">
                        Payment Gateway
                    </a>
                    </h4>
                </div>
            </div>
            
            <!-- this is for search bar -->
            <div class="search-bar">
                <div>
                    <!-- magnifying glass- search icon -->
                    <i class="fas fa-search search-ico"></i>
                </div>
                <input type="text" name="search" placeholder="Search">
                <div>
                        <!-- mic icon -->
                    <i class="fas fa-microphone mic-ico"></i>
                </div>
            </div>
             <!-- this is for notification bell -->
            <div class="notification-bell">
                <img src="images/bell_icon.svg">
    
            </div>
            <!-- this is for profile picture -->
            <div class="profile-picture">
                <img src="images/profile_picture.svg">
            </div>
